    <!-- Simplified initialization -->
    <script>
        // Language selector functions
        function initializeLanguageSelector() {
            const languageSelector = document.getElementById('language-selector');
            
            if (languageSelector && window.DROPSHARE_I18N) {
                const currentLang = window.DROPSHARE_I18N.getCurrentLanguage();
                languageSelector.value = currentLang;
                
                languageSelector.addEventListener('change', function() {
                    const selectedLang = this.value;
                    window.DROPSHARE_I18N.setLanguage(selectedLang);
                    translatePage();
                });
            }
        }

        function translatePage() {
            if (window.DROPSHARE_I18N) {
                window.DROPSHARE_I18N.translatePage();
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('📄 Homepage loaded successfully');
            
            // Initialize i18n and translate the page
            if (window.DROPSHARE_I18N && typeof window.DROPSHARE_I18N.init === 'function') {
                window.DROPSHARE_I18N.init().then(() => {
                    translatePage();
                    initializeLanguageSelector();
                });
            } else {
                 // Fallback for older script versions
                 setTimeout(initializeLanguageSelector, 150);
            }
            
            // Update navigation active state based on current page
            updateNavActiveState();
            
            // 不在点击时手动设置 active，避免首页误高亮；
            // 各页面加载后由 updateNavActiveState 自动计算。

            // 移动端汉堡菜单展开/收起
            const hamburgerBtn = document.getElementById('hamburgerBtn');
            const mobileNav = document.getElementById('mobileNavLinks');
            const menuBackdrop = document.getElementById('menuBackdrop');
            if (hamburgerBtn && mobileNav) {
                const closeMenu = () => {
                    mobileNav.classList.remove('mobile-open');
                    if (menuBackdrop) menuBackdrop.classList.remove('show');
                    if (langMenu) langMenu.classList.remove('open');
                    if (langToggle) langToggle.setAttribute('aria-expanded','false');
                };
                hamburgerBtn.addEventListener('click', () => {
                    const willOpen = !mobileNav.classList.contains('mobile-open');
                    mobileNav.classList.toggle('mobile-open');
                    if (menuBackdrop) menuBackdrop.classList.toggle('show', willOpen);
                    // 打开菜单时关闭语言菜单
                    if (willOpen && langMenu) langMenu.classList.remove('open');
                });
                if (menuBackdrop) menuBackdrop.addEventListener('click', closeMenu);
                // 路由或哈希变化时关闭
                window.addEventListener('hashchange', closeMenu);
                window.addEventListener('popstate', closeMenu);
                // 点击任一链接后关闭
                navLinks.forEach(a => a.addEventListener('click', closeMenu));
                // 尺寸变化到桌面端时强制关闭
                const mql = window.matchMedia('(min-width: 769px)');
                mql.addEventListener('change', e => { if (e.matches) closeMenu(); });
            }

            // 自定义语言菜单：移动端按钮定位弹出，宽度200px、最大高60vh
            const langSelect = document.getElementById('language-selector');
            const langToggle = document.getElementById('langToggle');
            const langMenu = document.getElementById('langMenu');
            const isMobile = window.matchMedia('(max-width: 768px)').matches;
            if (langSelect && langToggle && langMenu) {
            const syncToggleLabel = () => {
                    if (!langSelect) return;
                    // 若没有选中，尽力根据当前语言设置
                    if (langSelect.selectedIndex < 0) {
                        const cur = (window.DROPSHARE_I18N && window.DROPSHARE_I18N.getCurrentLanguage && window.DROPSHARE_I18N.getCurrentLanguage()) ||
                                    localStorage.getItem('preferred_language') || 'en';
                        const match = Array.from(langSelect.options).find(o => o.value === cur);
                        if (match) langSelect.value = cur;
                    }
                    const opt = langSelect.options[langSelect.selectedIndex] || Array.from(langSelect.options)[0];
                    const text = opt ? opt.textContent : 'Language';
                    langToggle.textContent = text;
                };
                const buildMenu = () => {
                    langMenu.innerHTML = '';
                    Array.from(langSelect.options).forEach(opt => {
                        const item = document.createElement('div');
                        item.className = 'lang-item';
                        item.setAttribute('role','option');
                        item.dataset.value = opt.value;
                        item.textContent = opt.textContent;
                        
                        item.addEventListener('click', () => {
                            langSelect.value = opt.value;
                            syncToggleLabel();
                            if (window.DROPSHARE_I18N) {
                                window.DROPSHARE_I18N.setLanguage(opt.value);
                                translatePage();
                            }
                            langMenu.classList.remove('open');
                            langToggle.setAttribute('aria-expanded','false');
                        });
                        langMenu.appendChild(item);
                    });
                };
                const positionMenu = () => {
                    const rect = langToggle.getBoundingClientRect();
                    langMenu.style.left = '0px';
                    langMenu.style.top = '100%';
                    langMenu.style.width = langToggle.offsetWidth + 'px';
                };
                const openMenu = () => {
                    buildMenu(); 
                    positionMenu();
                    langMenu.classList.add('open');
                    langToggle.setAttribute('aria-expanded','true');
                };
                const closeMenu = () => {
                    langMenu.classList.remove('open');
                    langToggle.setAttribute('aria-expanded','false');
                };
                document.addEventListener('click', (e) => {
                    if (!langMenu.contains(e.target) && !langToggle.contains(e.target)) closeMenu();
                });
                // 仅移动端启用自定义菜单并隐藏原生 select
                if (isMobile) {
                    langToggle.style.display = 'inline-flex';
                    // 构建自定义菜单
                    buildMenu();
                    // 尝试立即同步一次按钮文案
                    syncToggleLabel();
                    langToggle.addEventListener('click', (e) => {
                        e.preventDefault();
                        if (langMenu.classList.contains('open')) closeMenu(); else openMenu();
                    });
                    // 当 i18n 初始化完成或语言切换时，同步按钮文案
                    document.addEventListener('language-changed', syncToggleLabel);
                    const afterInit = () => {
                        syncToggleLabel();
                        buildMenu(); // 重新构建菜单以更新对勾标记
                    };
                    if (window.DROPSHARE_I18N && typeof window.DROPSHARE_I18N.initialize === 'function') {
                        // 在现有 initialize 完成后再次同步
                        // 不重复初始化，只挂载回调
                        setTimeout(afterInit, 400);
                    } else {
                        setTimeout(afterInit, 600);
                    }
                }
            }
        });
        
        function updateNavActiveState() {
            const navLinks = document.querySelectorAll('.nav-links a');
            const currentPage = window.location.pathname.split('/').pop() || 'index.html';
            const currentHash = window.location.hash;
            
            navLinks.forEach(link => {
                link.classList.remove('active');
            });

            // 在首页不高亮任何导航项，避免“Share/Transfer”显示为绿色
            if (currentPage === 'index.html') {
                return;
            }

            navLinks.forEach(link => {
                const linkHref = link.getAttribute('href');
                const linkPage = linkHref.split('#')[0].split('/').pop();
                const linkHash = linkHref.includes('#') ? '#' + linkHref.split('#')[1] : '';
                
                // Check if this link matches current page and hash
                if (linkPage === currentPage) {
                    if ((linkHash === '' && currentHash === '') || 
                        (linkHash === currentHash)) {
                        link.classList.add('active');
                    }
                }
            });
        }
        
        // Listen for hash changes (when navigating within share.html)
        window.addEventListener('hashchange', updateNavActiveState);
        window.addEventListener('popstate', updateNavActiveState);
    </script>
    
    <!-- Share Integration -->
    <script src="device-selector.js"></script>
    <script src="add-share-integration.js"></script>
</body>
</html>